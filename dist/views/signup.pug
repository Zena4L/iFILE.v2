extends base

block content 
    .container.max-w-sm.mx-auto.flex-1.flex.flex-col.items-center.justify-center.px-2
        form.signup.bg-white.px-6.py-8.rounded.shadow-md.text-black.w-full
            h1.mb-8.text-3xl.text-center Sign up
            input#name.block.border.border-grey-light.w-full.p-3.rounded.mb-4(type='text', name='fullname', placeholder='Full Name')
            input#email.block.border.border-grey-light.w-full.p-3.rounded.mb-4(type='text', name='email', placeholder='Email')
            input#password.block.border.border-grey-light.w-full.p-3.rounded.mb-4(type='password', name='password', placeholder='Password')
            input#password-confirm.block.border.border-grey-light.w-full.p-3.rounded.mb-4(type='password', name='confirm_password', placeholder='Confirm Password')
            button.w-full.py-4.bg-blue-400.w-full.rounded.text-blue-50.font-bold.my-1(type='submit', class='hover:bg-blue-700 focus:outline-none') Create Account
            .text-center.text-sm.text-grey-dark.mt-4
                | By signing up, you agree to the 
                a.no-underline.border-b.border-grey-dark.text-grey-dark(href='#')
                    | Terms of Service
                |  and 
                a.no-underline.border-b.border-grey-dark.text-grey-dark(href='#')
                    | Privacy Policy
        .text-grey-dark.mt-6
            | Already have an account? 
            a.no-underline.border-b.border-blue.text-blue(href='/login')
                | Log in
            | .